<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/avengers"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="400dp">

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="@string/beginner"
            android:background="@drawable/button_shape"
            android:textStyle="bold"
            android:layout_weight="1"
            android:id="@+id/beginner_btn"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="@string/advanced"
            android:background="@drawable/button_shape"
            android:textStyle="bold"
            android:layout_weight="1"
            android:id="@+id/advance_btn"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="@string/expert"
            android:background="@drawable/button_shape"
            android:textStyle="bold"
            android:layout_weight="1"
            android:id="@+id/expert_btn"/>
    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="@string/instructions2"
        android:background="@drawable/button_shape"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:id="@+id/instructionsdirect"/>


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="@string/leade_board"
        android:background="@drawable/button_shape"
        android:textStyle="bold"
        android:id="@+id/leaderDirect"/>

</LinearLayout>



